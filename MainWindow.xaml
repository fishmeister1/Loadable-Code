<Window x:Class="Codeful.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Codeful" 
        Height="700" 
        Width="1200"
        Icon="Resources/icon.ico"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Border Background="{StaticResource BackgroundBrush}" 
            CornerRadius="12" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1"
            ClipToBounds="True"
            Effect="{StaticResource WindowDropShadow}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Sidebar -->
            <Border Grid.Column="0" 
                    Background="{StaticResource SidebarBackgroundBrush}"
                    CornerRadius="12,0,0,12"
                    BorderBrush="{StaticResource SidebarBorderBrush}"
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Branding Label -->
                    <StackPanel Grid.Row="0" 
                                Orientation="Horizontal"
                                Margin="16,20,16,16"
                                VerticalAlignment="Center">
                        <Image Source="Resources/icon.ico" 
                               Width="20" Height="20"
                               Margin="0,0,8,0"
                               VerticalAlignment="Center"/>
                        <TextBlock Text="Loadable Code" 
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource ForegroundBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- New Chat Button -->
                    <Button Grid.Row="1" 
                            Name="NewChatButton"
                            Style="{StaticResource IconButtonStyle}"
                            Margin="16,8,16,8"
                            Click="NewChatButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource PlusIcon}" 
                                  Fill="{StaticResource ForegroundBrush}" 
                                  Width="14" Height="14"
                                  Stretch="Uniform"
                                  Margin="0,0,8,0"
                                  VerticalAlignment="Center"/>
                            <TextBlock Text="New Chat" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Chat History -->
                    <ScrollViewer Grid.Row="2" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Name="ChatHistoryPanel" 
                                    Margin="8,0,8,8"/>
                    </ScrollViewer>
                    
                    <!-- Settings Button -->
                    <Button Grid.Row="3" 
                            Name="SettingsButton"
                            Style="{StaticResource IconButtonStyle}"
                            Margin="16,8,16,20"
                            Click="SettingsButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource SettingsIcon}" 
                                  Fill="{StaticResource ForegroundBrush}" 
                                  Width="14" Height="14"
                                  Stretch="Uniform"
                                  Margin="0,0,8,0"
                                  VerticalAlignment="Center"/>
                            <TextBlock Text="Settings" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Main Chat Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Title Bar (for window dragging) -->
                <Border Grid.Row="0" 
                        Height="40"
                        Background="Transparent"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Minimize Button -->
                        <Button Grid.Column="1" 
                                Name="MinimizeButton"
                                Style="{StaticResource WindowControlButtonStyle}"
                                Width="40" Height="30"
                                Margin="0,5,0,5"
                                Click="MinimizeButton_Click">
                            <Path Data="{StaticResource MinimizeIcon}" 
                                  Fill="{StaticResource SecondaryTextBrush}" 
                                  Width="12" Height="12"
                                  Stretch="Uniform"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                        </Button>
                        
                        <!-- Maximize/Restore Button -->
                        <Button Grid.Column="2" 
                                Name="MaximizeButton"
                                Style="{StaticResource WindowControlButtonStyle}"
                                Width="40" Height="30"
                                Margin="0,5,0,5"
                                Click="MaximizeButton_Click">
                            <Path Name="MaximizeIcon"
                                  Data="{StaticResource MaximizeIcon}" 
                                  Fill="{StaticResource SecondaryTextBrush}" 
                                  Width="12" Height="12"
                                  Stretch="Uniform"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                        </Button>
                        
                        <!-- Close Button -->
                        <Button Grid.Column="3" 
                                Name="CloseButton"
                                Style="{StaticResource CloseButtonStyle}"
                                Width="40" Height="30"
                                Margin="0,5,10,5"
                                Click="CloseButton_Click">
                            <Path Data="{StaticResource CloseIcon}" 
                                  Fill="{StaticResource SecondaryTextBrush}" 
                                  Width="12" Height="12"
                                  Stretch="Uniform"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- Chat Messages Area -->
                <ScrollViewer Grid.Row="1" 
                              Name="ChatScrollViewer"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="20,0,20,0">
                    <Border Width="700"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,20">
                        <StackPanel Name="ChatMessagesPanel"/>
                    </Border>
                </ScrollViewer>
                
                <!-- Input Area -->
                <Border Grid.Row="2" 
                        Background="{StaticResource InputAreaBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,0,0"
                        CornerRadius="0,0,12,0"
                        Padding="20"
                        ClipToBounds="True">
                    <!-- Message Input Container -->
                    <Border Background="{StaticResource BackgroundBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="20"
                            Padding="16,12,4,12"
                            Width="700"
                            HorizontalAlignment="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Message Input -->
                            <TextBox Grid.Column="0"
                                     Name="MessageInput"
                                     Style="{StaticResource ChatInputStyle}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="False"
                                     VerticalScrollBarVisibility="Auto"
                                     MaxHeight="120"
                                     FontSize="14"
                                     Margin="0,0,8,0"
                                     KeyDown="MessageInput_KeyDown"
                                     TextChanged="MessageInput_TextChanged"/>
                            
                            <!-- Send Button -->
                            <Button Grid.Column="1" 
                                    Name="SendButton"
                                    Style="{StaticResource SendButtonStyle}"
                                    Width="42" Height="42"
                                    Click="SendButton_Click"
                                    IsEnabled="False">
                                <Path Data="{StaticResource AIStarIcon}" 
                                      Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                                      Width="18" Height="18"
                                      Stretch="Uniform"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>
                            </Button>
                        </Grid>
                    </Border>
                </Border>
            </Grid>
            
            <!-- Settings Modal Overlay -->
            <Grid Name="SettingsModalOverlay" 
                  Grid.ColumnSpan="2"
                  Background="#80000000" 
                  Visibility="Collapsed">
            <Border Background="{StaticResource BackgroundBrush}"
                    CornerRadius="20"
                    Width="500"
                    Height="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderThickness="1"
                    BorderBrush="{StaticResource BorderBrush}"
                    Effect="{StaticResource WindowDropShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Modal Header -->
                    <Grid Grid.Row="0" Margin="24,20,20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                   Text="Settings"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource ForegroundBrush}"
                                   VerticalAlignment="Center"/>
                        
                        <Button Grid.Column="1"
                                Name="CloseModalButton"
                                Style="{StaticResource CloseButtonStyle}"
                                Width="32" Height="32"
                                Click="CloseModalButton_Click">
                            <Path Data="{StaticResource CloseIcon}" 
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                                  Width="14" Height="14"
                                  Stretch="Uniform"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                        </Button>
                    </Grid>
                    
                    <!-- Modal Content -->
                    <ScrollViewer Grid.Row="1" 
                                  Margin="24,16,24,24"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Personal Settings Section -->
                            <TextBlock Text="Personal Settings"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource ForegroundBrush}"
                                       Margin="0,0,0,12"/>
                            
                            <Grid Margin="0,0,0,24">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0"
                                           Text="Name"
                                           FontSize="14"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource ForegroundBrush}"
                                           Margin="0,0,0,4"/>
                                
                                <TextBlock Grid.Row="1"
                                           Text="What would you like Loadable to call you?"
                                           FontSize="12"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           Margin="0,0,0,8"/>
                                
                                <TextBox Grid.Row="2"
                                         Name="NameSettingTextBox"
                                         FontSize="14"
                                         Padding="12,10"
                                         Background="{StaticResource BackgroundBrush}"
                                         Foreground="{StaticResource ForegroundBrush}"
                                         BorderBrush="{StaticResource BorderBrush}"
                                         BorderThickness="1"
                                         MaxLength="50"
                                         TextChanged="NameSettingTextBox_TextChanged"/>
                            </Grid>
                            
                            <!-- Notifications Setting -->
                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Notifications"
                                               FontSize="14"
                                               FontWeight="Medium"
                                               Foreground="{StaticResource ForegroundBrush}"
                                               Margin="0,0,0,4"/>
                                    
                                    <TextBlock Text="Enable desktop notifications for chat responses"
                                               FontSize="12"
                                               Foreground="{StaticResource SecondaryTextBrush}"/>
                                </StackPanel>
                                
                                <CheckBox Grid.Column="1"
                                          Name="NotificationsToggle"
                                          Style="{StaticResource ToggleSwitchStyle}"
                                          VerticalAlignment="Center"
                                          Margin="16,0,0,0"
                                          Checked="NotificationsToggle_Changed"
                                          Unchecked="NotificationsToggle_Changed"/>
                            </Grid>
                            
                            <!-- Data Management Section -->
                            <TextBlock Text="Data Management"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource ForegroundBrush}"
                                       Margin="0,0,0,12"/>
                            
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Delete all data"
                                               FontSize="14"
                                               Foreground="{StaticResource ForegroundBrush}"
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="This will permanently delete all your saved chats and cannot be undone."
                                               FontSize="12"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                                
                                <Button Grid.Column="1"
                                        Name="DeleteAllDataButton"
                                        Content="Delete"
                                        Background="#FF4444"
                                        Foreground="White"
                                        Padding="16,8"
                                        FontSize="13"
                                        FontWeight="Medium"
                                        BorderThickness="0"
                                        Margin="16,0,0,0"
                                        Click="DeleteAllDataButton_Click"
                                        Style="{x:Null}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF6666"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#CC3333"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
            </Grid>
        </Grid>
    </Border>
</Window>